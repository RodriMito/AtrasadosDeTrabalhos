aprovado = []
reprovado = []

while True:
    nome = input(' digite o nome do aluno ou FIM para parar: ')
    if nome == 'FIM':
        break
    n1 = float(input('digite a primeiro: '))
    n2 = float(input('digite a segunda: '))
    n3 = float(input('digite a terceira: '))
    n4 = float(input('digite a quarta: '))
    media = (n1+n2+n3+n4)/4
    if media>=6:
        print('a media de', media, 'foi ele está aprovado.'.format(media))
    else:
        print('a media de', media,'foi ele está reprovado.'.format(media))
    print('o numero de aluno aprovado foi de', len(aprovado), ' é o número de reprovados foi de ', len(reprovado))
